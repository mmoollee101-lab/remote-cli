{
  "name": "claude-telegram-remote",
  "version": "1.0.0",
  "description": "Telegram bot bridge for controlling Claude Code CLI remotely",
  "main": "bot.js",
  "bin": "bot.js",
  "scripts": {
    "start": "node bot.js",
    "build": "pkg . --output dist/bin/claude-telegram-bot.exe"
  },
  "pkg": {
    "targets": [
      "node20-win-x64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.45",
    "dotenv": "^16.4.7",
    "node-telegram-bot-api": "^0.66.0"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^6.14.0"
  }
}
